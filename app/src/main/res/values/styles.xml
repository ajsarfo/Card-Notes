<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "CustomToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color_on_toolbar</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditNoteHeadingTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color_on_toolbar</item>
        <item name="android:fontFamily">@font/primary_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>